{
  "extends": [
    "config:base"
  ],

  "dependencies": {
    "updateTypes": ["patch"],
    "automerge": true
  },
  "devDependencies": {
    "updateTypes": ["minor", "patch"],
    "automerge": true
  },

  "digest": {
    "enabled": false
  },

  "labels": [
    "renovate"
  ],

  "packageRules": [
      {
        "packagePatterns": ["^eslint"],
        "groupName": "eslint packages"
      },
      {
      "matchPackageNames": ["eslint"],
      "allowedVersions": "<8.0.0"
      },
      {
      "matchPackageNames": ["eslint-plugin-promise"],
      "allowedVersions": "<6.0.0"
      }
    ],

  "schedule": ["on tuesday"]
}
