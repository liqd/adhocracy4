{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "eslint packages",
      "matchPackageNames": [
        "/^eslint/"
      ]
    },
    {
      "matchPackageNames": [
        "Django"
      ],
      "allowedVersions": "/(^3\\.2\\.[0-9]+$)|(^4\\.2\\.[0-9]+$)|(^5\\.2\\.[0-9]+$)/"
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ],
  "digest": {
    "enabled": false
  },
  "labels": [
    "renovate"
  ],
  "pip_requirements": {
    "fileMatch": [
      "^requirements/.*\\.txt$"
    ]
  }
}
