root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space

[*.{py,html,css,scss}]
indent_size = 4

[*.{js,jsx}]
indent_size = 2

[Makefile]
indent_style = tab

# isort configuration
[*.py]
skip=migrations
known_first_party=adhocracy4, meinberlin, apps
