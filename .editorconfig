root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4

[*.{js,jsx,json}]
indent_size = 2

[Makefile]
indent_style = tab

[*.py]
max_line_length = 88

[*.{md,mkdn}]
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
